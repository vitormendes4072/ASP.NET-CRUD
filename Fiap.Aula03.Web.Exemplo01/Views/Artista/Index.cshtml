@model List<Artista>
@{
    ViewData["Title"] = "Index";
}

<h1>Lista de artistas</h1>
<mensagem texto="@TempData["msg"]"></mensagem>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Gênero</th>
            <th scope="col">Data de nascimento</th>
            <th scope="col">Logradouro</th>
            <th scope="col">CEP</th>
            <th scope="col">Cidade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.ArtistaId</th>
                <td>@item.Nome</td>
                <td>@item.Genero</td>
                <td>@item.DataNascimento.ToShortDateString()</td>
                <td>@item.Endereco.Logradouro</td>
                <td>@item.Endereco.Cep</td>
                <td>@item.Endereco.Cidade</td>
                <td>
                    <a asp-action="editar" class="btn btn-primary btn-sm">Editar</a>
                    <button onClick="artistaId.value = @item.ArtistaId" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal">
                        Remover
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que quer remover o artista?
            </div>
            <div class="modal-footer">
                <form asp-action="remover">
                    <input type="hidden" name="id" id="artistaId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>