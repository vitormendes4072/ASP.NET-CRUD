@model IList<Filme>

@{
    ViewData["Title"] = "Filmes";
}

<h1>Lista de filmes</h1>
<mensagem texto="@TempData["msg"]"></mensagem>
<table class="table table-hover table-primary">
    <thead>
        <tr>
            <th scope="col">Código</th>
            <th scope="col">Título</th>
            <th scope="col">Gênero</th>
            <th scope="col">Data de Lançamento</th>
            <th scope="col">Produtora</th>
            <th scope="col">Livre para todas as idades</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Codigo</th>
                <td>@item.Titulo</td>
                <td>@item.Genero</td>
                <td>@item.DataLancamento</td>
                <td>@item.Produtora</td>
                <td>@item.LivreTodasIdades</td>
                <td>
                    <a asp-action="editar" asp-route-codigo="@item.Codigo" class="btn btn-primary btn-sm">Editar</a>
                    <button onClick="codigoFilme.value = @item.Codigo" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal">
                        Remover
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza que quer remover o filme?
            </div>
            <div class="modal-footer">
                <form asp-action="remover">
                    <input type="hidden" name="codigo" id="codigoFilme" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>